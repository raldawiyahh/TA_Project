<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="jidoka_employee_group_wiz_view_form" model="ir.ui.view">
            <field name="name">Add Employee to Group Wizard</field>
            <field name="model">jidoka.employee.group.wiz</field>
            <field name="arch" type="xml">
                <form string="Add Employee to Group Wizard">
                    <field name="employee_ids">
                        <tree>
                            <field name="name"/>
                            <field name="department_id"/>
                        </tree>
                    </field>
                    <footer>                        
                        <button name="action_add_employees" string="Confirm" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>          
    </data>
</odoo>