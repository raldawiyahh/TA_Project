<odoo>
    <data>

        <record id="invisible_customer_project_inherit" model="ir.ui.view">
            <field name="name">invisible.customer.project.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>

        <record id="add_field_after_deadline_project_inherit" model="ir.ui.view">
            <field name="name">add.field.after.deadline.project.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="date_deadline" position="after">
                    <field name="end_sprint" />
                    <field name="task_deadline"/>
                    <field name="level_difficulty"/>
                    <field name="task_priority"/>
                </field> 
            </field>
        </record>

        <record id="add_field_before_deadline_project_inherit" model="ir.ui.view">
            <field name="name">add.field.before.deadline.project.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="date_deadline" position="before">
                    <field name="modul"/>
                    <field name="sprint_id" force_save="1"/>
                    <field name="sprint_to" force_save="1"/>
                </field> 
            </field>
        </record>

        <record id="change_field_before_deadline_project_inherit" model="ir.ui.view">
            <field name="name">change.field.before.deadline.project.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="date_deadline" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field> 
            </field>
        </record>

        <record id="add_field_before_assignees_project_inherit" model="ir.ui.view">
            <field name="name">add.field.before.assignees.project.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="user_ids" position="before">
                    <field name="project_id" force_save="1"/>
                    <field name="pb_name" force_save="1"/>
                    <field name="pb_no" force_save="1"/>
                    <field name="task_no"/>
                    <field name="task_description"/>
                </field>
            </field>
        </record>

    </data>
</odoo>